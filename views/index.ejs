<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head.ejs') %>
    <title>Document</title>
</head>
<body>
    <div class="index-container">
    <h1>Monopoly</h1>
    <ul class="players-container">
        <% monopoly.map((player) => { %>
            <div class="player-card">
                <div class="name">
                    <a href="/monopoly/<%= player._id%>">
                        <button>
                        <%=player.name%>
                    </button>
                    </a>
                </div>
                <p class="piece">Piece: <%=player.piece%></p>
                <p class="money"> Money: <%=player.money%></p>
                <p>Properties :</p>
                <ul class="prop-list">
                <% player.properties.map((property) => { %>
                        <li>
                            <%= property.propName %>
                        </li>
                    <% }) %>
                    </ul>
                <div class="editBtn">
                    <a href="/monopoly/<%=player["_id"] %>/edit">
                        <button>
                            Edit
                        </button>
                    </a>
                    <form action="/monopoly/<%=player["_id"]; %>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE"/>
                    </form>
                </div>
            </div>
        <% }) %>
    </ul>
    </div>
    <nav>
        <a href="/monopoly/new">Create a New Player!</a>
    </nav>
</body>
</html>