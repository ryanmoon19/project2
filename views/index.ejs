<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Monopoly</h1>
    <ul>
        <% monopoly.map((player) => { %>
            <div class="cardText">
                <a href="/monopoly/<%= player._id%>">
                    <button>
                    <%=player.name%>
                </button>
                </a>
                <p>Piece: <%=player.piece%></p>
                <p>Money: <%=player.money%></p>
                <p>Properties :</p>
                <ul>
                <% player.properties.map((property) => { %>
                        <li>
                            <%= property.propName %>
                        </li>
                    <% }) %>
                    </ul>
            </div>
            <div class="editBtn">
                <a href="/monopoly/<%=player["_id"] %>/edit">
                    <button>
                        Edit
                    </button>
                </a>
                <form action="/monopoly/<%=player["_id"]; %>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE"/>
                </form>
            </div>
        <% }) %>
    </ul>
</body>
</html>
